<form id="newExercise" action="/updateTable"> <!-- Specifies where form data is to be sent. Send to specified in order to have table update. -->

    <fieldset>

        <legend> Update Exercise Info </legend>

        <label for="exercise">Exercise Name:</label>
        <input type="text" name="exercise" id="exercise" value="{{workouts.name}}"> <br> <!-- Map input value to property in 'workouts' table object -->

        <label for="reps"># of Reps: </label>
        <input type="number" name="reps" id="reps" value="{{workouts.reps}}"> <br>

        <label for="weight">Weight:</label>
        <input type="number" name="weight" id="weight" value="{{workouts.weight}}"> <br>

        <label for="date">Date:</label>
        <input type="date" name="date" id="date" value="{{workouts.date}}"> <br>

        {{#if workouts.lbs}} <!-- Use express-handlebars conditional to handle selection of units; name designated lbs for all because binary -->

        <label for="lbs">lbs</label>
        <input type="radio" name="lbs" value="1" id="lbs" checked="checked">

        <label for="kgs">kg</label>
        <input type="radio" name="lbs" value="0"><br>

        {{else}}
        <label for="lbs">lbs</label>
        <input type="radio" name="lbs" value="1" id="lbs">

        <label for="kgs">kg</label>
        <input type="radio" name="lbs" value="0" checked="checked"><br>

        {{/if}}

        <input type="hidden" name="id" value={{workouts.id}}> <!-- Hidden input for ID value -->
        <input type="submit" id="submit" value="Submit">

    </fieldset>
</form>

